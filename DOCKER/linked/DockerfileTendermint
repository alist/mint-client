# Pull base image.
FROM eris/base

ENV DOCKERFILES ./DOCKER/linked

# grab deps (gmp)
RUN apt-get update && \
  apt-get install -y --no-install-recommends \
    libgmp3-dev jq && \
  rm -rf /var/lib/apt/lists/*

# grab tendermint
RUN go get github.com/tendermint/tendermint/cmd/tendermint
ENV TMROOT /home/eris/.eris/blockchains/tendermint
RUN mkdir -p $TMROOT
ADD $DOCKERFILES/config.toml $TMROOT/config.toml
RUN chown -R $USER:$USER $TMROOT

# set user
USER $USER
WORKDIR /home/eris

CMD ["tendermint", "node"]
